<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    tools:context=".AdminFoodManagement">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvBrand"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="The TeaCoffee"
            android:textStyle="italic"
            android:textSize="28sp"
            android:textColor="#2E7D32"
            android:fontFamily="cursive" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_menu_24"
            app:tint="#4E4E4E" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="60dp"
        android:padding="12dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Tabs -->
            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/tabsGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                app:singleSelection="true"
                app:selectionRequired="true">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnTabProduct"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sản phẩm"
                    android:textSize="16sp"
                    android:textAllCaps="false"
                    android:maxLines="1"
                    android:ellipsize="none"
                    android:minWidth="0dp"
                    android:paddingStart="0dp"
                    android:paddingEnd="4dp"
                    android:insetLeft="0dp"
                    android:insetRight="0dp"
                    android:textColor="@color/staff_tab_text"
                    app:strokeColor="@color/tab_border_color"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnTabCategory"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Danh mục"
                    android:textSize="16sp"
                    android:textAllCaps="false"
                    android:maxLines="1"
                    android:ellipsize="none"
                    android:minWidth="0dp"
                    android:paddingStart="0dp"
                    android:paddingEnd="4dp"
                    android:insetLeft="0dp"
                    android:insetRight="0dp"
                    android:textColor="@color/staff_tab_text"
                    app:strokeColor="@color/tab_border_color"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnTabStats"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Thống kê"
                    android:textSize="16sp"
                    android:textAllCaps="false"
                    android:maxLines="1"
                    android:ellipsize="none"
                    android:minWidth="0dp"
                    android:paddingStart="0dp"
                    android:paddingEnd="4dp"
                    android:insetLeft="0dp"
                    android:insetRight="0dp"
                    android:textColor="@color/staff_tab_text"
                    app:strokeColor="@color/tab_border_color"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnTabStaff"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nhân viên"
                    android:textSize="16sp"
                    android:textAllCaps="false"
                    android:maxLines="1"
                    android:ellipsize="none"
                    android:minWidth="0dp"
                    android:paddingStart="0dp"
                    android:paddingEnd="4dp"
                    android:insetLeft="0dp"
                    android:insetRight="0dp"
                    android:textColor="@color/staff_tab_text"
                    app:strokeColor="@color/tab_border_color"/>
            </com.google.android.material.button.MaterialButtonToggleGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end|center_vertical"
                android:layout_marginBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:text="Danh mục "
                    android:textSize="16sp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilCategoryFilter"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    app:endIconMode="dropdown_menu"
                    app:hintEnabled="true">
<!--                    android:hint="Lọc theo Danh mục"-->

                    <com.google.android.material.textfield.MaterialAutoCompleteTextView
                        android:id="@+id/spCategoryFilter"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:paddingHorizontal="8dp"
                        android:inputType="none"
                        android:hint="Chọn danh mục"
                        android:contentDescription="Bộ lọc danh mục sản phẩm" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <!-- 3 nút chế độ -->
            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/modeGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:singleSelection="true"
                app:selectionRequired="true"
                android:layout_marginBottom="12dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAddSP"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Thêm"
                    android:checkable="true"
                    android:textColor="@color/btn_add"
                    android:layout_marginEnd="8dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnEditSP"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sửa"
                    android:checkable="true"
                    android:textColor="@color/btn_edit"
                    android:layout_marginEnd="8dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDeleteSP"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Xóa"
                    android:textColor="@color/btn_delete"
                    android:checkable="true"/>
            </com.google.android.material.button.MaterialButtonToggleGroup>

            <LinearLayout
                android:id="@+id/foodFormContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="#F8F8F8"
                android:layout_marginBottom="16dp"
                android:visibility="gone"> <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:hint="Tên Món Ăn">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etFoodName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"/>
            </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:hint="Giá (VND)">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etFoodPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:singleLine="true"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:hint="Danh mục">
                    <com.google.android.material.textfield.MaterialAutoCompleteTextView
                        android:id="@+id/spFoodCategory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"/>
                </com.google.android.material.textfield.TextInputLayout>

<!--                <Button-->
<!--                    android:id="@+id/btnSelectImage"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="Chọn ảnh sản phẩm (Food_Image)"/>-->

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnConfirmFoodAction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Xác nhận"/>


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Danh sách Sản phẩm:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <ListView
                android:id="@+id/lvFoodList"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#FAFAFA"
        android:layout_gravity="bottom"
        android:elevation="8dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_home_24"
            app:tint="#2E7D32"
            android:layout_marginHorizontal="36dp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_people_24"
            app:tint="#9E9E9E"
            android:layout_marginHorizontal="36dp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_calendar_24"
            app:tint="#9E9E9E"
            android:layout_marginHorizontal="36dp" />
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>